<script>
    $(document).ready(function () {
        $("#form-geninfo").submit(function (e) {
            e.preventDefault();
            // console.log($('#form-geninfo').serializeArray());
            // alert(($('#form-geninfo').serializeArray()));
            $("#form-geninfo").validate({
                rules:{
                    recdate:{
                        required:true
                    },
                    serial:{
                        required:true
                    },
                    hospital:{
                        required:true
                    },
                    name:{
                        required:true
                    },
                    telephone:{
                        required:true,
                        digits:true,
                        rangelength:[1,11]
                    },
                    age:{
                        required:true,
                        digits:true,
                        range:[0,200]
                        // rangelength:[1,4]
                    },
                    height:{
                        required:false,
                        rangelength:[0,6]
                    },
                    weight:{
                        required:false,
                        rangelength:[0,6]
                    },
                    waistline:{
                        required:false,
                        rangelength:[0,6]
                    },
                    hipline:{
                        required:false,
                        rangelength:[0,6]
                    }
                },
                messages:{
                    recdate:{required:"请填写该字段"},
                    serial:{required:"请填写该字段"},
                    hospital:{required:"请填写该字段"},
                    name:{required:"请填写该字段"},
                    telephone:{
                        required:"请填写该字段",
                        rangelength:$.validator.format("电话号码长度必须在{0}-{1}之间"),
                        digits:"不能填写非数字字符"        
                    },
                    age:{
                        required:"请填写该字段",
                        digits:"不能填写非数字字符",
                        range:$.validator.format("年龄必须在{0}-{1}之间")
                    },
                    height:{
                        rangelength:$.validator.format("数值长度必须在{0}-{1}之间,包含小数点")
                    },
                    weight:{
                        rangelength:$.validator.format("数值长度必须在{0}-{1}之间,包含小数点")
                    },
                    waistline:{
                        rangelength:$.validator.format("数值长度必须在{0}-{1}之间,包含小数点")
                    },
                    hipline:{
                        rangelength:$.validator.format("数值长度必须在{0}-{1}之间,包含小数点")
                    },
                },
                submitHandler:function () {
                    $.ajax({
                        url: "/mobile/move1",
                        type: "POST",
                        // dataType: "json",
                        data: $('#form-geninfo').serializeArray(),
                        success: function (result) {
                            // alert(result.form_all);
                            alert("继续填写下一页");
                            window.location.href = "move2";
                        },
                        error:  function () {
                            alert("error");
                        },
                    })   
                }
            })           

        })
    })
</script>

