    <script>
        function validate() {                  
            var pwd = $("#newcode").val();
            var pwd1 = $("#affirmcode").val();
            if (pwd == pwd1) {
                $("#tip").html("两次密码相同");
                 $("#tip").css("color","green");
            $("#codeBtn").removeAttr("disabled");
            } else {
                $("#tip").html("两次密码不相同");
                 $("#tip").css("color","red")
                  $("#codeBtn").attr("disabled","disabled");  
            }
        }
    </script>
    <script>
        $(document).ready(function () {
            $("#codeBtn").click(function () {
                $.ajax({
                    url: "/cipher",//路由，用来处理ajax请求的函数的所在地址
                    type: "PUT",
                    data: {
                        oldcode: $("#oldcode").val(),   
                        newcode: $("#newcode").val(),
                        affirmcode: $("#affirmcode").val()
                    },
                    success: function (data) {
                        if (data.status == 1) {
                            alert("密码修改成功,请重新登录")
                            $.removeCookie("userinfo", { path: '/' });  //密码修改成功后删除原cookie
                            $.removeCookie("prj001token", { path: '/' });
                            $.removeCookie("usertoken", { path: '/' });
                            $.removeCookie("userid", { path: '/' });
                            window.location.href = '/';    //    请求成功后跳转到你的主页
                        } else {
                            alert("密码修改失败");
                            window.location.href = '/cipher';
                        }
                    },
                    error: function () {
                        alert("密码修改失败");
                        window.location.href = '/home';
                    }
                });
            });
        });
    </script>
