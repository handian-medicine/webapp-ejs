        <script>
                $(document).ready(function () {
                $("#userLogin").click(function () {
                    $.ajax({
                        url: "/index/cipher",//路由，用来处理ajax请求的函数的所在地址
                        type: "POST",
                        data: {
                            oldcode: $("#oldcode").val(),    //    用户邮箱和密码
                            newcode: $("#newcode").val(),
                            affirmcode: $("#affirmcode").val()

                        },
                        success: function (data) {
                            if (data.status == 1) {
                                window.location.href = '/home';    //    请求成功后跳转到你的主页
                            } else {
                                alert(data.msg);
                            }
        
                        },
                        error: function () {
                            alert("登录失败");
                            window.location.href = '/';
                        }
                    });
                });
            });
        </script>
